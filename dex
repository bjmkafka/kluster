#!/bin/bash #-x
#
# dex: wrapper script for Docker exec bash
#

CMD=$(basename $0)

if [ $CMD = dex ]; then
    if [[ $# -gt 1 ]]; then
	docker exec -it "$@"
    elif [[ $# -eq 1 ]]; then
	docker exec -it "$1" /bin/bash
    else
	docker exec -it tools /bin/bash
    fi
elif [ $CMD = dcs ]; then
    docker-compose ps
elif [ $CMD = ddn ]; then
    docker-compose down
elif [ $CMD = ddv ]; then
    docker-compose down -v
elif [ $CMD = dl ]; then
    docker logs "$@"
elif [ $CMD = dps ]; then
    docker ps "$@"
elif [ $CMD = dpa ]; then
    docker ps -a
elif [ $CMD = dst ]; then
    docker-compose stop "$@"
elif [ $CMD = dup ]; then
    docker-compose up -d
fi

    
